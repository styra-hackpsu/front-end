* {
	padding: 0;
	margin: 0;
	font-family: var(--font);
	box-sizing: border-box;
}

:root {
	font-size: 10pt;
	--red: #ff4f67;

	--theme: rgb(87, 147, 255);

	--blue: #527aff;
	--green: #1bd6ae;
	--dark-green: #09bb94;
	--yellow: #ffd95c;
	--dark-yellow: #ffbd2b;

	--bg: #fff;
	--bg-dark: #f5f5f5;
	--bg-dark-2: #e5e5e5;

	--text: #010204;
	--text-light: #414143;
	--text-light-2: #7e858e;
	--text-light-3: #aaaaaa;
	--text-light-4: #d7dee9;

	--font: Quicksand;
}

a {
	text-decoration: none;
	color: inherit;
}

body {
	height: 100vh;
	width: 100vw;
	background-color: var(--theme);
	background-attachment: fixed;
}

